<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEdit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BDBDBD"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/select_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@android:drawable/ic_menu_gallery"
            android:onClick="selectImage2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select Image"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:background="#FFFFFF"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/name"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:background="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:hint="Your name will be here"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hobby 1:"
                android:background="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/h1"
                android:padding="5dp"
                android:background="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:hint="Your hobby will be here"></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hobby 2:"
                android:background="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/h2"
                android:padding="5dp"
                android:background="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:hint="Your hobby will be here"></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hobby 3:"
                android:background="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/h3"
                android:padding="5dp"
                android:background="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:hint="Your hobby will be here"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:background="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24dp"></TextView>
            <EditText
                android:id="@+id/status"
                android:padding="5dp"
                android:background="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:hint="Your status will be here"></EditText>
        </LinearLayout>

        <Button
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_button"
            android:padding="20dp"
            android:text="Update"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:onClick="updateProfile"/>
        <EditText
            android:id="@+id/emailTutan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </LinearLayout>
</ScrollView>
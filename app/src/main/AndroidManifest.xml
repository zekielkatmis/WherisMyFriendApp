<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whereismyfriend">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityLocation"></activity>
        <activity android:name=".FriendProfiles" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".ContactUs" />
        <activity android:name=".RegisterPage" />
        <activity android:name=".ProfileEdit" />
        <activity android:name=".GoogleMaps" />
        <activity android:name=".SettingsScreen" />
        <activity android:name=".LogOut" />
        <activity android:name=".AboutUs" />
        <activity android:name=".ProfileScreen" />
        <activity android:name=".CloseFriends" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_key" />
    </application>

</manifest>